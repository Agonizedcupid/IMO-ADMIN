<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Point"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/questionPointEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:inputType="number"
            android:background="@drawable/edit_text_back"
            />


        <Button
            android:id="@+id/questionPointBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="set"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong Answer Point"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/wrongAnswerEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:inputType="number"
            android:background="@drawable/edit_text_back"
            />
        <Button
            android:id="@+id/wrongAnswerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="set"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Answer Point"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/rightAnswerEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:inputType="number"
            android:background="@drawable/edit_text_back"
            />
        <Button
            android:id="@+id/rightAnswerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="set"
            />

    </LinearLayout>

</RelativeLayout>